<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
  <body>
    <%- include("../menu"); %>
    <button
      type="button"
      class="btn aqua-gradient"
      style="border-radius: 45px;"
      onclick="location.href='/api/movie/new'"
    >
      Create
    </button>

    <div class="row row-cols-1 row-cols-md-4" style="padding:2%">
      <%result.forEach(movie => { %>
      <div class="col mb-4">
        <!-- Card -->
        <div class="card">
          <!-- Card image -->
          <div class="view overlay">
            <img
              class="card-img-top"
              src="https://mdbootstrap.com/img/Photos/Others/images/43.jpg"
              alt="Card image cap"
            />
            <a href="#!">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>

          <!-- Card content -->
          <div class="card-body">
            <!-- Title -->
            <h4 class="card-title"><%= movie.title %></h4>
            <!-- Text -->
            <p class="card-text">
              <%= movie.director %>
            </p>
            <p class="card-text">
              <%= movie.year %>
            </p>
            <!-- Button -->
            <a
              href="/api/movie/<%= movie._id %>"
              class="btn btn-outline-info waves-effect"
              style="border-radius: 10px;"
              >More..</a
            >
          </div>
        </div>
      </div>
      <!-- Card -->

      <% }) %>
    </div>
    <%-include("../footer");%>
  </body>
</html>
